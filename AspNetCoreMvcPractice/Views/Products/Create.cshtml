@model CreateProductViewModel

@{
    ViewData["Title"] = "Create new Product";
}

<form method="post" class="font-weight-bold text-sm-left">
    <div class="input-group-sm col-sm-3">
        <label asp-for="ProductName">Product name</label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>
    <div class="input-group-sm col-sm-3" style="padding-top: 10px">
        <label asp-for="Supplier">Supplier</label>
        <select asp-for="SupplierID" asp-items="ViewBag.Suppliers" class="form-control"></select>
    </div>
    <div class="input-group-sm col-sm-3" style="padding-top: 10px">
        <label asp-for="Category">Category</label>
        <select asp-for="CategoryID" asp-items="ViewBag.Categories" class="form-control"></select>
    </div>
    <div class="input-group-sm col-sm-3" style="padding-top: 10px">
        <label asp-for="QuantityPerUnit">Quantity per unit</label>
        <input asp-for="QuantityPerUnit" class="form-control" />
        <span asp-validation-for="QuantityPerUnit" class="text-danger"></span>
    </div>
    <div class="input-group-sm col-sm-2" style="padding-top: 10px">
        <label asp-for="UnitPrice">Unit price</label>
        <input asp-for="UnitPrice" class="form-control" />
        <span asp-validation-for="UnitPrice" class="text-danger"></span>
    </div>
    <div class="input-group-sm col-sm-2" style="padding-top: 10px">
        <label asp-for="UnitsInStock">Units in stock</label>
        <input asp-for="UnitsInStock" class="form-control" />
        <span asp-validation-for="UnitsInStock" class="text-danger"></span>
    </div>
    <div class="input-group-sm col-sm-2" style="padding-top: 10px">
        <label asp-for="UnitsOnOrder">Units on order</label>
        <input asp-for="UnitsOnOrder" class="form-control" />
        <span asp-validation-for="UnitsOnOrder" class="text-danger"></span>
    </div>
    <div class="input-group-sm col-sm-2" style="padding-top: 10px">
        <label asp-for="ReorderLevel">Reorder level</label>
        <input asp-for="ReorderLevel" class="form-control" />
        <span asp-validation-for="ReorderLevel" class="text-danger"></span>
    </div>
    <div class="input-group-sm col-sm-2" style="padding-top: 10px">
        <label asp-for="Discontinued"></label>
        <input asp-for="Discontinued" />
        <span asp-validation-for="Discontinued" class="text-danger"></span>
    </div>
    <div class="form-group" style="padding-left: 16px">
        <input type="submit" name="Save" class="btn btn-outline-success btn-lg" value="Submit" />
    </div>
</form>
