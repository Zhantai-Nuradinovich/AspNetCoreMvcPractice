@model AspNetCoreMvcPractice.ViewModels.Users.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<form method="post" asp-action="Login">
    <div style="padding-top: 10px">
        <a asp-action="ExternalLogin" class="btn btn-outline-primary">Login with Azure AD</a>
    </div>
    <div asp-validation-summary="ModelOnly"></div>
    <div style="padding-top: 10px">
        <label asp-for="Email">Email:</label><br />
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div style="padding-top: 20px">
        <label asp-for="Password">
            Password:
            <a style="color: #5a84bf; padding-left: 40px; font-size: 10px" asp-controller="Users" asp-action="ForgotPassword">Forgot password?</a>
        </label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div style="padding-top: 20px;">
        <input type="submit" class="btn btn-success" value="Login" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}